{
  "extends": "@tekclaw/scaffold/tsconfig.node.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "*": ["*", "./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules/**",
    "dist",
    "analyze",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
